# top-most EditorConfig file
root = true

# Windows-style newlines with a newline ending every file
[**]
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[**.java]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace=true

# 4 space indentation
[**.jsx]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace=true

[pom.xml]
charset = utf-8
indent_style = space
indent_size = 4
